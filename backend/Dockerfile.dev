FROM golang:1.25-alpine

WORKDIR /app

# Install development tools
RUN apk add --no-cache git ca-certificates

# Copy go mod files
COPY go.mod go.sum ./

# Download dependencies
RUN go mod download

# Copy source code
COPY . .

# Expose port
EXPOSE 8080

# Run with go run (will restart container on code changes thanks to volume mount)
CMD ["go", "run", "main.go"]
