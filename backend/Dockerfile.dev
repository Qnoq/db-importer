FROM golang:1.21-alpine

WORKDIR /app

# Install development tools and air for hot reload
RUN apk add --no-cache git ca-certificates && \
    go install github.com/air-verse/air@latest

# Copy go mod files
COPY go.mod go.sum ./

# Download dependencies
RUN go mod download

# Copy source code
COPY . .

# Expose port
EXPOSE 8080

# Use air for hot reload in development, fallback to go run
CMD ["sh", "-c", "if command -v air > /dev/null; then air; else go run main.go; fi"]
