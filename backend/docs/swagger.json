{
    "swagger": "2.0",
    "info": {
        "description": "A secure web application that generates type-safe SQL INSERT statements from Excel/CSV files without requiring direct database connections.\nUpload your SQL schema, map your data, and generate validated SQL statements.",
        "title": "DB Importer API",
        "contact": {
            "name": "API Support",
            "url": "https://github.com/Qnoq/db-importer"
        },
        "license": {
            "name": "MIT",
            "url": "https://opensource.org/licenses/MIT"
        },
        "version": "1.0"
    },
    "host": "localhost:3000",
    "basePath": "/",
    "paths": {
        "/api/v1/imports": {
            "post": {
                "security": [
                    {
                        "BearerAuth": []
                    }
                ],
                "description": "Save a new import record with generated SQL and metadata\nStores table name, row count, SQL (gzipped), mappings, transformations, and validation results",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Imports"
                ],
                "summary": "Create import record",
                "parameters": [
                    {
                        "description": "Import details (table, rows, SQL, metadata)",
                        "name": "request",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/db-importer_internal_models.CreateImportRequest"
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "Import created successfully with import data",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    },
                    "400": {
                        "description": "Invalid request or validation failed",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    },
                    "401": {
                        "description": "Unauthorized - missing or invalid token",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    },
                    "500": {
                        "description": "Internal server error",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    }
                }
            }
        },
        "/api/v1/imports/delete": {
            "delete": {
                "security": [
                    {
                        "BearerAuth": []
                    }
                ],
                "description": "Delete a specific import record by ID",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Imports"
                ],
                "summary": "Delete import",
                "parameters": [
                    {
                        "type": "string",
                        "description": "Import UUID to delete",
                        "name": "id",
                        "in": "query",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Import deleted successfully",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    },
                    "400": {
                        "description": "Invalid or missing import ID",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    },
                    "401": {
                        "description": "Unauthorized",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    },
                    "404": {
                        "description": "Import not found",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    }
                }
            }
        },
        "/api/v1/imports/get": {
            "get": {
                "security": [
                    {
                        "BearerAuth": []
                    }
                ],
                "description": "Retrieve import metadata by ID (without SQL content)\nReturns table name, row count, status, timestamps, and statistics",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Imports"
                ],
                "summary": "Get import details",
                "parameters": [
                    {
                        "type": "string",
                        "description": "Import UUID",
                        "name": "id",
                        "in": "query",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Import details",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    },
                    "400": {
                        "description": "Invalid or missing import ID",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    },
                    "401": {
                        "description": "Unauthorized",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    },
                    "404": {
                        "description": "Import not found",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    }
                }
            }
        },
        "/api/v1/imports/list": {
            "get": {
                "security": [
                    {
                        "BearerAuth": []
                    }
                ],
                "description": "List imports with pagination, filtering by table/status, and sorting",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Imports"
                ],
                "summary": "List user imports",
                "parameters": [
                    {
                        "type": "integer",
                        "description": "Page number (default: 1)",
                        "name": "page",
                        "in": "query"
                    },
                    {
                        "type": "integer",
                        "description": "Page size, max 100 (default: 20)",
                        "name": "pageSize",
                        "in": "query"
                    },
                    {
                        "type": "string",
                        "description": "Filter by table name",
                        "name": "tableName",
                        "in": "query"
                    },
                    {
                        "type": "string",
                        "description": "Filter by status (success/warning/failed)",
                        "name": "status",
                        "in": "query"
                    },
                    {
                        "type": "string",
                        "description": "Sort field (createdAt/tableName/rowCount)",
                        "name": "sortBy",
                        "in": "query"
                    },
                    {
                        "type": "string",
                        "description": "Sort order (asc/desc)",
                        "name": "sortOrder",
                        "in": "query"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Paginated list of imports",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    },
                    "400": {
                        "description": "Invalid query parameters",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    },
                    "401": {
                        "description": "Unauthorized",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    },
                    "500": {
                        "description": "Internal server error",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    }
                }
            }
        },
        "/api/v1/imports/old": {
            "delete": {
                "security": [
                    {
                        "BearerAuth": []
                    }
                ],
                "description": "Delete imports older than specified number of days (default: 30)",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Imports"
                ],
                "summary": "Delete old imports",
                "parameters": [
                    {
                        "type": "integer",
                        "description": "Delete imports older than this many days (default: 30)",
                        "name": "days",
                        "in": "query"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Number of imports deleted",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    },
                    "401": {
                        "description": "Unauthorized",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    },
                    "500": {
                        "description": "Internal server error",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    }
                }
            }
        },
        "/api/v1/imports/sql": {
            "get": {
                "security": [
                    {
                        "BearerAuth": []
                    }
                ],
                "description": "Retrieve import details including the generated SQL content (decompressed)",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Imports"
                ],
                "summary": "Get import with SQL",
                "parameters": [
                    {
                        "type": "string",
                        "description": "Import UUID",
                        "name": "id",
                        "in": "query",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Import details with SQL content",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    },
                    "400": {
                        "description": "Invalid or missing import ID",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    },
                    "401": {
                        "description": "Unauthorized",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    },
                    "404": {
                        "description": "Import not found",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    }
                }
            }
        },
        "/api/v1/imports/stats": {
            "get": {
                "security": [
                    {
                        "BearerAuth": []
                    }
                ],
                "description": "Retrieve user's import statistics (total count, success/warning/failed counts, total rows)",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Imports"
                ],
                "summary": "Get import statistics",
                "responses": {
                    "200": {
                        "description": "Import statistics",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    },
                    "401": {
                        "description": "Unauthorized",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    },
                    "500": {
                        "description": "Internal server error",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    }
                }
            }
        },
        "/auth/login": {
            "post": {
                "description": "Authenticate user with email and password, returns JWT access and refresh tokens",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Auth"
                ],
                "summary": "User login",
                "parameters": [
                    {
                        "description": "Login credentials",
                        "name": "request",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/db-importer_internal_models.LoginRequest"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Login successful with tokens and user data",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    },
                    "400": {
                        "description": "Invalid request body or validation failed",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    },
                    "401": {
                        "description": "Invalid credentials",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    },
                    "403": {
                        "description": "User account not active",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    },
                    "500": {
                        "description": "Internal server error",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    }
                }
            }
        },
        "/auth/logout": {
            "post": {
                "description": "Invalidate the refresh token to log out the user",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Auth"
                ],
                "summary": "User logout",
                "parameters": [
                    {
                        "description": "Refresh token to invalidate",
                        "name": "request",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/db-importer_internal_models.RefreshTokenRequest"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Logout successful",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    },
                    "400": {
                        "description": "Invalid request body or validation failed",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    },
                    "500": {
                        "description": "Internal server error",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    }
                }
            }
        },
        "/auth/refresh": {
            "post": {
                "description": "Generate new access and refresh tokens using a valid refresh token",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Auth"
                ],
                "summary": "Refresh access token",
                "parameters": [
                    {
                        "description": "Refresh token",
                        "name": "request",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/db-importer_internal_models.RefreshTokenRequest"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Tokens refreshed successfully with new tokens",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    },
                    "400": {
                        "description": "Invalid request body or validation failed",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    },
                    "401": {
                        "description": "Invalid or expired refresh token",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    }
                }
            }
        },
        "/auth/register": {
            "post": {
                "description": "Create a new user account with email and password\nPassword must be at least 8 characters. Email must be unique.",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Auth"
                ],
                "summary": "Register new user",
                "parameters": [
                    {
                        "description": "User registration details",
                        "name": "request",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/db-importer_internal_models.CreateUserRequest"
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "User created successfully with user data",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    },
                    "400": {
                        "description": "Invalid request body or validation failed",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    },
                    "409": {
                        "description": "Email already exists",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    },
                    "500": {
                        "description": "Internal server error",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    }
                }
            }
        },
        "/generate-sql": {
            "post": {
                "description": "Generate type-safe SQL INSERT statements from mapped data rows\nValidates data types, constraints (NOT NULL, length, ranges), and produces production-ready SQL",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "text/plain"
                ],
                "tags": [
                    "SQL"
                ],
                "summary": "Generate SQL INSERT statements",
                "parameters": [
                    {
                        "description": "Table name, column mappings, data rows, and field definitions",
                        "name": "request",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/internal_handlers.GenerateSQLRequest"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Generated SQL INSERT statements (plain text)",
                        "schema": {
                            "type": "string"
                        }
                    },
                    "400": {
                        "description": "Invalid request (missing fields, empty data)",
                        "schema": {
                            "$ref": "#/definitions/internal_handlers.ErrorResponse"
                        }
                    },
                    "422": {
                        "description": "Data validation failed (type mismatches, constraint violations)",
                        "schema": {
                            "$ref": "#/definitions/internal_handlers.ErrorResponse"
                        }
                    },
                    "500": {
                        "description": "Internal server error",
                        "schema": {
                            "$ref": "#/definitions/internal_handlers.ErrorResponse"
                        }
                    }
                }
            }
        },
        "/health": {
            "get": {
                "description": "Check API server health, version, and database connection status",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Health"
                ],
                "summary": "Health check",
                "responses": {
                    "200": {
                        "description": "Health status, version, database status, and configuration",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    }
                }
            }
        },
        "/parse-schema": {
            "post": {
                "description": "Upload a SQL dump file (.sql) to extract table definitions and column information\nSupports MySQL and PostgreSQL schemas using TiDB parser with regex fallbacks",
                "consumes": [
                    "multipart/form-data"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Schema"
                ],
                "summary": "Parse SQL schema from file",
                "parameters": [
                    {
                        "type": "file",
                        "description": "SQL schema file (.sql)",
                        "name": "file",
                        "in": "formData",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successfully parsed schema with table definitions",
                        "schema": {
                            "$ref": "#/definitions/internal_handlers.ParseSchemaResponse"
                        }
                    },
                    "400": {
                        "description": "Invalid request (bad file, empty file, or no tables found)",
                        "schema": {
                            "$ref": "#/definitions/internal_handlers.ErrorResponse"
                        }
                    },
                    "500": {
                        "description": "Internal server error",
                        "schema": {
                            "$ref": "#/definitions/internal_handlers.ErrorResponse"
                        }
                    }
                }
            }
        },
        "/validate": {
            "post": {
                "description": "Validate data rows against field type definitions without generating SQL\nChecks data types, NOT NULL constraints, length limits, and numeric ranges",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "SQL"
                ],
                "summary": "Validate data against schema",
                "parameters": [
                    {
                        "description": "Data rows, field definitions, and column mappings",
                        "name": "request",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/internal_handlers.GenerateSQLRequest"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Validation results with valid flag and error list",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    },
                    "400": {
                        "description": "Invalid request body",
                        "schema": {
                            "$ref": "#/definitions/internal_handlers.ErrorResponse"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "db-importer_internal_models.CreateImportRequest": {
            "type": "object",
            "required": [
                "generatedSql",
                "rowCount",
                "status",
                "tableName"
            ],
            "properties": {
                "errorCount": {
                    "type": "integer",
                    "minimum": 0
                },
                "generatedSql": {
                    "description": "Will be compressed before storage",
                    "type": "string"
                },
                "metadata": {
                    "$ref": "#/definitions/db-importer_internal_models.ImportMetadata"
                },
                "rowCount": {
                    "type": "integer",
                    "minimum": 0
                },
                "status": {
                    "enum": [
                        "success",
                        "warning",
                        "failed"
                    ],
                    "allOf": [
                        {
                            "$ref": "#/definitions/db-importer_internal_models.ImportStatus"
                        }
                    ]
                },
                "tableName": {
                    "type": "string",
                    "maxLength": 255,
                    "minLength": 1
                },
                "warningCount": {
                    "type": "integer",
                    "minimum": 0
                }
            }
        },
        "db-importer_internal_models.CreateUserRequest": {
            "type": "object",
            "required": [
                "email",
                "password"
            ],
            "properties": {
                "email": {
                    "type": "string"
                },
                "firstName": {
                    "type": "string",
                    "maxLength": 100,
                    "minLength": 1
                },
                "lastName": {
                    "type": "string",
                    "maxLength": 100,
                    "minLength": 1
                },
                "password": {
                    "description": "bcrypt max 72 bytes",
                    "type": "string",
                    "maxLength": 72,
                    "minLength": 8
                }
            }
        },
        "db-importer_internal_models.ImportMetadata": {
            "type": "object",
            "properties": {
                "databaseType": {
                    "description": "mysql, postgresql, etc.",
                    "type": "string"
                },
                "extra": {
                    "description": "any additional data",
                    "type": "object",
                    "additionalProperties": true
                },
                "mappingSummary": {
                    "description": "column -\u003e source column",
                    "type": "object",
                    "additionalProperties": {
                        "type": "string"
                    }
                },
                "sourceFileName": {
                    "type": "string"
                },
                "transformations": {
                    "description": "list of transformations applied",
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "validationErrors": {
                    "description": "error messages if any",
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "validationWarnings": {
                    "description": "warning messages if any",
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                }
            }
        },
        "db-importer_internal_models.ImportStatus": {
            "type": "string",
            "enum": [
                "success",
                "warning",
                "failed"
            ],
            "x-enum-varnames": [
                "ImportStatusSuccess",
                "ImportStatusWarning",
                "ImportStatusFailed"
            ]
        },
        "db-importer_internal_models.LoginRequest": {
            "type": "object",
            "required": [
                "email",
                "password"
            ],
            "properties": {
                "email": {
                    "type": "string"
                },
                "password": {
                    "type": "string"
                }
            }
        },
        "db-importer_internal_models.RefreshTokenRequest": {
            "type": "object",
            "required": [
                "refreshToken"
            ],
            "properties": {
                "refreshToken": {
                    "type": "string"
                }
            }
        },
        "generator.FieldInfo": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string"
                },
                "nullable": {
                    "type": "boolean"
                },
                "type": {
                    "type": "string"
                }
            }
        },
        "internal_handlers.ErrorResponse": {
            "type": "object",
            "properties": {
                "detail": {
                    "type": "string"
                },
                "error": {
                    "type": "string"
                },
                "errors": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                }
            }
        },
        "internal_handlers.GenerateSQLRequest": {
            "type": "object",
            "properties": {
                "fields": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/generator.FieldInfo"
                    }
                },
                "mapping": {
                    "type": "object",
                    "additionalProperties": {
                        "type": "string"
                    }
                },
                "rows": {
                    "type": "array",
                    "items": {
                        "type": "array",
                        "items": {}
                    }
                },
                "table": {
                    "type": "string"
                }
            }
        },
        "internal_handlers.ParseSchemaResponse": {
            "type": "object",
            "properties": {
                "tables": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/parser.Table"
                    }
                }
            }
        },
        "parser.Field": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string"
                },
                "nullable": {
                    "type": "boolean"
                },
                "type": {
                    "type": "string"
                }
            }
        },
        "parser.Table": {
            "type": "object",
            "properties": {
                "fields": {
